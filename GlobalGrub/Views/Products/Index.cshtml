@model IEnumerable<GlobalGrub.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-hover sortable">
    <thead>
        <tr>
            <th>
                <a href="#">@Html.DisplayNameFor(model => model.Name)</a>
            </th>
            <th align="right">
                <a href="#">@Html.DisplayNameFor(model => model.Price)</a>
            </th>
            <th align="right">
                <a href="#">@Html.DisplayNameFor(model => model.Weight)</a>
            </th>
            <th>
                <a href="#">@Html.DisplayNameFor(model => model.Category)</a>
            </th>
            <th class="sorttable_nosort">
                @*@Html.DisplayNameFor(model => model.Photo)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Photo)*@
                    @if((item.Photo != null))
                    {
                        <img src="~/img/products/@item.Photo" alt="Product Photo" class="thumb" />
                    }
                    else
                    {
                        <img src="~/img/products/placeholder.png" alt="Product Photo" class="thumb" />
                    }
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
