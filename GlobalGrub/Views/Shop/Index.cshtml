@{ViewData["Title"] = "Shop our Store";}

<h1>Shop our Store</h1>
<section class="row card-group">
    @foreach (var category in Model)
    {
        <div class="col-sm-6 col-lg-4 mb-3">
            <div class="card mb-4 text-center h-100">
                <div class="card-body">
                    <a asp-controller="Shop" asp-action="shopByCategory" asp-route-categoryid="@category.CategoryId">@category.Name</a> <!-- asp-route-... defines a parameter -->
                </div>
            </div>
        </div>
    }
</section>